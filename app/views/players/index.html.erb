<div class="row">
  <div class="col-md-12">
    <h1>Search for a Player </h1>
    <p class="lead">Historical Data +</p>
  </div>
</div>
<hr>
<datalist id="player-names">
  <% Player.all.each do |player| %>
    <option value="<%= player.full_name %>"></option>
  <% end %>
</datalist>
<div class="row">
  <div class="col-md-12">
    <%= form_tag players_path, :method => "get", class: "form-inline", id: "search-form" do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], class: "form-control", list: "player-names" %>
      </div>
      <%= submit_tag "Search", class: "btn btn-default" %>
    <% end %>
    </div>
  </div>
</div>

<% if @player %>
<br>
<div class="row">
  <div class="col-md-5">
    <div class="hide" id="pid"><%= @player.id %></div>
    <h1 id="pname"><%= @player.name %></h1>
    <p class="lead"><%= @player.position.abbr %> | <%= @player.age %> years old</p>
  </div>
  <div class="col-md-7">
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>Current ADP</h4>
        <p><%= @player.latest_rank %></p>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>3 Month Trend</h4>
        <p><%= @player.dlf_trend_3_months %></p>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>Trade Value</h4>
        <p><%= @player.value %></p>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>2015 Redraft</h4>
        <p><%= @player.latest_redraft_rank %></p>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Age</th>
        <th>Position</th>
        <th>Current ADP</th>
        <th>Redraft Rank</th>
        <th>3 Month Trend</th>
      </thead>
      <tbody>
        <% @similar_players.each do |player| %>
        <% if player == @player %>
          <tr class="active">
        <% else %>
          <tr>
        <% end %>
            <td><%= link_to player.name, player_path(player) %></td>
            <td><%= player.age %></td>
            <td><%= player.position.name %></td>
            <td><%= player.latest_rank %></td>
            <td><%= player.latest_redraft_rank %></td>
            <td><%= player.dlf_trend_3_months %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>
<div class="row">
  <div class="col-xs-offset-2 col-xs-8">
     <div id="line_top_x"></div>
  </div>
</div>
<% end %>
