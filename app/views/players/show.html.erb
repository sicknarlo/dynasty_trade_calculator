<div class="row">
  <div class="hide" id="pid"><%= @player.id %></div>
  <div class="col-md-5">
    <h1 id="pname"><%= @player.name %></h1>
    <p class="lead"><%= @player.position.abbr %> | <%= @player.age %> years old</p>
  </div>
  <div class="col-md-7">
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>Current ADP</h4>
        <p><%= @player.latest_rank %></p>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>3 Month Trend</h4>
        <p><%= @player.dlf_trend_3_months %></p>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="player-data panel panel-default text-center">
        <h4>Trade Value</h4>
        <p><%= @player.value %></p>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Age</th>
        <th>Position</th>
        <th>Current ADP</th>
        <th>3 Month Trend</th>
      </thead>
      <tbody>
        <% @similar_players.each do |player| %>
        <% if player == @player %>
          <tr class="active">
        <% else %>
          <tr>
        <% end %>
            <td><%= link_to player.name, player_path(player) %></td>
            <td><%= player.age %></td>
            <td><%= player.position.name %></td>
            <td><%= player.latest_rank %></td>
            <td><%= player.dlf_trend_3_months %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>
<div class="row">
  <div class="col-md-12">
     <div id="line_top_x"></div>
  </div>
</div>