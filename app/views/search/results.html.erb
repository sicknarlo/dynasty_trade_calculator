          <%= label_tag(:t2p3, "Player 3") %>
          <%= text_field_tag(:t2p3, nil,class: "form-control sfield2", list: "player-names") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p4, "Player 4") %>
          <%= text_field_tag(:t2p4, nil,class: "form-control sfield2", list: "player-names") %>
        </div>

        <div class="form-group">
          <%= label_tag(:t2p5, "Player 5") %>
          <%= text_field_tag(:t2p5, nil,class: "form-control sfield2", list: "player-names") %>
        </div>

    </div>
    <div class="col-md-offset-3 col-md-6">
        <br>
        <%=submit_tag(value="Evaluate", class: "form-control btn btn-success") %>
        <% end %>
    </div>

</div>